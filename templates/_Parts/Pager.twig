{% autoescape true %}
<div class="text-center">
  <ul class="pagination pagination_lg">
    {% if page_num > 1 %}
      {% if (page_num - 1) == 1 %}
        <li class="active">
          <a href="/">&laquo;</a>
        </li>
      {% else %}
        <li class="active">
          <a href="/page/{{page_nunm - 1}}">&laquo;</a>
        </li>
      {%  endif %}
    {% endif %}

    <li><span class="page_num">{{page_num}}</span></li>

    {% if next_page_is_exist %}
        <li class="active">
          <a href="/page/{{page_num + 1}}" class="next">&raquo;</a>
        </li>
    {% endif %}
  </ul>
</div>
{% endautoescape %}